<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ThemSanPhamActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_backnha"
                android:layout_width="54dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/double_arrow_left" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/search_shape"
                android:fontFamily="@font/agbalumo"
                android:text="Thêm sản phẩm"
                android:textAlignment="center"
                android:textColor="@color/xanhdam"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/search_shape"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText

                android:id="@+id/edt_tensp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/agbalumo"
                android:hint="Nhập tên sản phẩm"
                android:inputType="text"
                android:textColor="@color/xanhsang"
                android:textColorHint="@color/xanhsang"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/search_shape"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText

                android:id="@+id/edt_gia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/agbalumo"
                android:hint="Nhập giá sản phẩm"
                android:inputType="textEmailAddress"
                android:textColor="@color/xanhsang"
                android:textColorHint="@color/xanhsang"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/search_shape"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText

                android:id="@+id/chonanh"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:drawableRight="@drawable/baseline_add_circle_24"
                android:ems="10"
                android:fontFamily="@font/agbalumo"
                android:hint="Chọn ảnh sản phẩm"
                android:inputType="number"
                android:textColor="@color/xanhsang"
                android:textColorHint="@color/xanhsang"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/hienthichonanh"
            android:layout_width="175dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/addtocartshape"
            android:fontFamily="@font/agbalumo"
            android:text="Mô tả "
            android:textAlignment="center"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edt_mota"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_shape"
            android:fontFamily="@font/agbalumo"
            android:gravity="left"
            android:hint="Nhập mô tả"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/xanhsang"
            android:textColorHint="@color/xanhsang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/search_shape"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText

                android:id="@+id/edt_soluong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/agbalumo"
                android:hint="Nhập số lượng"
                android:inputType="text"
                android:textColor="@color/xanhsang"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColorHint="@color/xanhsang" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_them"
            style="@null"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/xanhdam"
            android:fontFamily="@font/agbalumo"
            android:text="Thêm sản phẩm"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>