<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChonViTriActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anhdong"
        android:layout_width="411dp"
        android:layout_height="407dp"
        android:layout_marginTop="224dp"
        android:hardwareAccelerated="false"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/location" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/agbalumo"
        android:text="Chọn vị trí của bạn"
        android:textColor="@color/xanhdam"
        android:textColorLink="@color/xanhsang"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        style="@null"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/xanhsang"
        app:boxStrokeErrorColor="@null"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:counterOverflowTextColor="@null"
        app:cursorErrorColor="@null"
        app:endIconMode="custom"
        app:endIconTint="@color/xanhdam"
        app:errorIconTint="@null"
        app:errorTextColor="@null"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:layout_editor_absoluteX="16dp">

        <AutoCompleteTextView
            android:id="@+id/listOfLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_shape"
            android:drawableRight="@drawable/baseline_arrow_circle_down_24"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/agbalumo"
            android:hint="Chọn vị trí"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/xanhsang"
            android:textColorHighlight="@color/xanhsang"
            android:textColorHint="@color/xanhsang"
            android:textColorLink="@color/xanhsang"
            android:textCursorDrawable="@null"
            android:textStyle="bold|italic" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_ne"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/xanhsang"
        android:fontFamily="@font/agbalumo"
        android:text="Trang chủ"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anhdong" />
</androidx.constraintlayout.widget.ConstraintLayout>