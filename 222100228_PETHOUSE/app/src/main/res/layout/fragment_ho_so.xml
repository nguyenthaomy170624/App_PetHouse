<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HoSoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/agbalumo"
            android:text="THÔNG TIN CÁ NHÂN"
            android:textAlignment="center"
            android:textColor="@color/xanhdam"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_shape"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/agbalumo"
                    android:text="Họ và tên"
                    android:textColor="@color/xanhdam"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <EditText

                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/agbalumo"
                    android:hint="Nhập họ tên"
                    android:inputType="text"
                    android:textColor="@color/xanhsang"
                    android:textColorHint="@color/xanhsang"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_shape"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/agbalumo"
                    android:text="Địa chỉ"
                    android:textColor="@color/xanhdam"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <EditText

                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/agbalumo"
                    android:hint="Nhập địa chỉ"
                    android:inputType="textMultiLine"
                    android:textColor="@color/xanhsang"
                    android:textColorHint="@color/xanhsang"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_shape"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/agbalumo"
                    android:text="Email"
                    android:textColor="@color/xanhdam"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <EditText

                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/agbalumo"
                    android:hint="Nhập email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/xanhsang"
                    android:textColorHint="@color/xanhsang"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/search_shape"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/agbalumo"
                    android:text="Điện thoại"
                    android:textColor="@color/xanhdam"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <EditText

                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/agbalumo"
                    android:hint="Nhập số điện thoại"
                    android:inputType="number"
                    android:textColor="@color/xanhsang"
                    android:textColorHint="@color/xanhsang"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/search_shape"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/agbalumo"
                    android:text="Mật khẩu"
                    android:textColor="@color/xanhdam"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="@null"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/xanhdam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/agbalumo"
                        android:textColor="@color/xanhsang"
                        android:textSize="14sp"
                        android:textStyle="bold|italic" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_dangxuat"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="90dp"
                    android:background="@drawable/addtocartshape"
                    android:backgroundTint="@color/xanhdam"
                    android:fontFamily="@font/agbalumo"
                    android:text="Đăng xuất"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:background="@drawable/addtocartshape"
                    android:backgroundTint="@color/xanhdam"
                    android:fontFamily="@font/agbalumo"
                    android:text="Chỉnh sửa hồ sơ"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/luuthongtin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/addtocartshape"
                android:elevation="5dp"
                android:fontFamily="@font/agbalumo"
                android:text="Lưu thông tin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>